<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/checkbox_background" />
            <stroke android:width="@dimen/default_stroke_width" android:color="@color/colorPrimary" />
            <corners android:radius="@dimen/default_corner_radius" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/checkbox_background_pressed" />
            <stroke android:width="@dimen/default_stroke_width" android:color="@color/colorPrimary" />
            <corners android:radius="@dimen/default_corner_radius" />
        </shape>
    </item>
</selector>